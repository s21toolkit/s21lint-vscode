{
	"name": "s21lint-vscode",
	"displayName": "s21lint-vscode",
	"description": "s21lint integration for VSCode",
	"version": "1.0.1",
	"publisher": "bgenia",
	"engines": {
		"vscode": "^1.82.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:cpp",
		"onLanguage:c"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "s21lint-vscode.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/s21toolkit/s21lint-vscode.git"
	},
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsup",
		"watch": "tsup --watch",
		"pretest": "pnpm run compile && pnpm run lint",
		"lint": "biome check .",
		"lint:fix": "biome check --apply .",
		"test": "vscode-test",
		"extension:package": "pnpm vsce package --no-dependencies",
		"extension:publish": "pnpm vsce publish --no-dependencies"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.7.2",
		"@tsconfig/strictest": "^2.0.5",
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.19.31",
		"@types/vscode": "1.82.0",
		"@vscode/test-cli": "^0.0.8",
		"@vscode/test-electron": "^2.3.9",
		"@vscode/vsce": "^2.26.1",
		"tsup": "^8.0.2",
		"typescript": "^5.4.5",
		"web-tree-sitter": "^0.22.5"
	},
	"dependencies": {
		"@s21toolkit/lint": "^1.1.2"
	}
}
